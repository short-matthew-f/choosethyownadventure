<div class="row">
  <div class="col-md-12">
    <div class="alert alert-danger alert-dismissible">
      <h3>There are errors!</h3>
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <p>
        <%= flash[:error] %>
      </p>
  </div>
</div>