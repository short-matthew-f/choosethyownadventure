<div class="row">
  <div class="room col-md-6">
    <h3 class="title">
      <%= @room.name %>
      <span class="pull-right">
        <% if @room.maze.author == current_user %>
          <%= link_to "Edit", edit_room_url(@room), class: "pull-right" %>
          <%= link_to "Delete", room_url(@room), confirm: "Are you sure?", method: :delete %>
        <% else %>
        
        <% end %>
      </span>
    </h3>

    <p class="lead">
      <%= @room.description.html_safe %>
    </p>
  </div>
</div>