<%= render partial: @maze, locals: { reference: :show } %>

<% if @maze.author == current_user %>
   
    <h2 class="room rooms-header">
      Rooms currently in maze:
      
      <div class="icons pull-right">
        <%= link_to(new_maze_room_url(@maze), class: "btn btn-primary") do %>
          <span class="glyphicon glyphicon-plus">
          </span>
          Add Room
        <% end %>
      </div>
    </h2>
    
    <div class="room">
      <%= render partial: @maze.rooms, locals: { reference: :show } %>
    </div>
  </div>
  
<% end %>