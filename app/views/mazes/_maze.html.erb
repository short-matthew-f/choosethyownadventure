<div class="panel panel-default maze">
  <div class="panel-heading">
    <h2 class="panel-title">
      <% if reference == :index %>
        <a data-toggle="collapse" data-target="#maze-body-<%= maze.id %>" href="#maze-body-<%= maze.id %>"><%= maze.title %></a>
        
        <% unless maze.author == current_user %>
          - 
          <span class="author">
            <%= link_to(maze.author) do %>
              <%= author_name(maze) %> 
              <span class="glyphicon glyphicon-user">
              </span>
            <% end %>
          </span>
        <% end %>
        
        <span class="pull-right">
          <%= maze.average_rating ? "#{maze.average_rating} out of 5" : "Unrated" %>
        </span>
      <% else %>
        <%= @maze.title %>
         - 
        <span class="author">
          <%= link_to(maze.author) do %>
            <%= author_name(maze) %> 
            <span class="glyphicon glyphicon-user">
            </span>
          <% end %>
        </span>
        
        <span class="pull-right">
          <%= @maze.average_rating ? "#{@maze.average_rating} out of 5" : "Unrated" %>
        </span>
      <% end %>
    </h2>
  </div>
  
  <% if reference == :index %>
    <div id="maze-body-<%= maze.id %>" class="panel-collapse collapse">
  <% end %>
  
  <div class="panel-body">   
    <%= image_tag(maze.image.url, class: "pull-right maze-image") if maze.picture %>
    
    <div class="description">
      <%= maze.description.html_safe %>
    </div>
    
    <div class="icons pull-right">
      <% if reference == :index %>
        <%= link_to(maze_url(maze)) do %>
          <button class="btn btn-primary">
            <span class="glyphicon glyphicon-eye-open">
            </span>
            View
          </button>
        <% end %>
      <% end %>
      
      <%= link_to(play_maze_path(maze)) do %>
        <button class="btn btn-primary">
          <span class="glyphicon glyphicon-play">
          </span>
          Play
        </button>
      <% end %>
      
      <%= link_to(maze_ratings_path(maze)) do %>
        <button class="btn btn-primary">
          <span class="glyphicon glyphicon-comment">
          </span>
          Ratings
        </button>
      <% end %>
      
      <% if maze.author == current_user %>
        
        <%= link_to(edit_maze_url(maze)) do  %>
          <button class="btn btn-primary">
            <span class="glyphicon glyphicon-pencil">
            </span>
            Edit
          </button>
        <% end %>
    
        <%= link_to(maze_url(maze), method: :delete, data: { confirm: "Really delete #{maze.title}?" } ) do %>
          <button class="btn btn-primary">
            <span class="glyphicon glyphicon-trash">
            </span>
            Delete
          </button>
        <% end %>
        
      <% end %>
    </div>
  </div>
    
  <% if reference == :index %>
    </div>
  <% end %>
</div>